<Window x:Class="MortalWombat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="625" Width="850" ResizeMode="NoResize" Cursor="Pen" Icon="Images/797826-dragons-logos-mortal-kombat-mortal-kombat-logo-video-games.jpg">
    <Canvas Cursor="Pen">
        <Canvas.Background>
            <ImageBrush ImageSource="Images/thumb2-mortal-kombat-x-logo-black-background.jpg"/>
        </Canvas.Background>
        <Button x:Name="start" Content="Start" Height="58" Canvas.Left="368" Canvas.Top="270" Width="118" FontSize="18" FontWeight="Bold" Click="start_Click" Cursor="Hand" IsDefault="True" IsHitTestVisible="True"/>
        <Button x:Name="exit" Content="Exit" Height="58" Canvas.Left="368" Canvas.Top="440" Width="118" FontSize="18" FontWeight="Bold" Click="exit_Click" Cursor="Hand" IsDefault="True" IsHitTestVisible="True"/>
        <Button x:Name="instructions" Content="Instructions" Height="58" Canvas.Left="368" Canvas.Top="356" Width="118" FontSize="18" FontWeight="Bold" Click="instructions_Click" Cursor="Hand" IsDefault="True" IsHitTestVisible="True"/>

    </Canvas>
</Window>
